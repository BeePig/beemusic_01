<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View"/>
        <variable
            name="listener"
            type="com.framgia.beemusic.util.draganddrop.DragAndDrop.OnDragListener"
            />
        <variable
            name="holder"
            type="com.framgia.beemusic.album.addtoalbum.ChooseAlbumAdapter.ViewHolder"
            />

        <variable
            name="presenter"
            type="com.framgia.beemusic.album.addtoalbum.ChooseAlbumContract.Presenter"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5"
        >

        <RelativeLayout
            android:id="@+id/relative_layout_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dp_7"
            android:gravity="center"
            android:onClick="@{()->presenter.onAddToAlbum(holder)}"
            android:orientation="vertical"
            bind:holder="@{holder}"
            bind:touchListener="@{listener}"
            >

            <ImageView
                android:id="@+id/image_album"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ava"
                bind:image="@{holder.album}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_transparent"
                android:gravity="center"
                android:lines="2"
                android:text="@{holder.album.name}"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:checked="@{holder.isChecked}"
            android:onClick="@{()->presenter.onAddToAlbum(holder)}"
            />
    </android.support.v7.widget.CardView>
</layout>
