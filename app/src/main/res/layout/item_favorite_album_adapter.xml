<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="model"
            type="com.framgia.beemusic.favorite.FavoriteAlbumAdapter.BindingModel"
            />

    </data>

    <ru.rambler.libs.swipe_layout.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->model.bindPresenter.onOpenPlayMusic(model.song,model.singer)}"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->model.bindPresenter.onOpenPlayMusic(model.song,model.singer)}"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_8"
                >
                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:text="@{model.song.name}"
                    android:textColor="@color/color_teal_900"
                    android:textStyle="italic"
                    />

                <TextView
                    android:id="@+id/textview_artist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:ellipsize="end"
                    android:text="@{model.singer}"
                    android:textColor="@color/color_red_500"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_is_favorite"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_right_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:gravity="center|end"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_20"
            app:clamp="parent"
            app:gravity="left"
            >

            <ImageView
                android:id="@+id/image_view_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_50"
                android:onClick="@{()->model.bindPresenter.onDeleteSong(model.song,model.holder)}"
                android:src="@drawable/ic_is_non_favorite"
                />

            <ImageView
                android:id="@+id/image_view_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->model.bindPresenter.onAddToAlbum(model.song,swipeLayout)}"
                android:src="@drawable/ic_music_album"
                />
        </LinearLayout>
    </ru.rambler.libs.swipe_layout.SwipeLayout>
</layout>
