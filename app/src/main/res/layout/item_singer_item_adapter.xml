<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="holder"
            type="com.framgia.beemusic.singeritems.SingerItemsAdapter.ViewHolder"
            />
        <variable
            name="presenter"
            type="com.framgia.beemusic.singeritems.SingerItemsContract.Presenter"
            />

    </data>

    <ru.rambler.libs.swipe_layout.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_grey_100"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:onClick="@{()->presenter.onOpenPlayMusic(holder.song)}"
            android:paddingLeft="@dimen/dp_10"
            android:text="@{holder.song.name}"
            android:textColor="@color/color_teal_900"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_white"
            android:gravity="center|end"
            android:orientation="horizontal"
            app:clamp="parent"
            app:gravity="left"
            >

            <ImageView
                android:id="@+id/image_view_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:onClick="@{()->presenter.onAddToAlbum(holder.song,swipeLayout)}"
                android:src="@drawable/ic_music_album"
                />

            <ImageView
                android:id="@+id/image_view_non_favarite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:onClick="@{()->presenter.onAddToFavorite(holder.song,swipeLayout)}"
                android:src="@drawable/ic_is_non_favorite"
                android:visibility="@{holder.song.isFavorite ? View.GONE : View.VISIBLE}"
                />

            <ImageView
                android:id="@+id/image_view_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:onClick="@{()->presenter.onRemoveFromFavorite(holder.song,swipeLayout)}"
                android:src="@drawable/ic_is_favorite"
                android:visibility="@{holder.song.isFavorite ? View.VISIBLE : View.GONE}"
                />
        </LinearLayout>
    </ru.rambler.libs.swipe_layout.SwipeLayout>
</layout>
