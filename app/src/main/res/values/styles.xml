<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_less_green</item>
        <item name="colorPrimaryDark">@color/color_less_green</item>
    </style>

    <style name="ActionBarToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="colorControlNormal">@color/color_white</item>
        <item name="android:colorControlNormal">@color/color_white</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/color_white</item>
        <item name="android:textColorHint">@color/color_white</item>
    </style>
</resources>
